<Page x:Class="GamesLauncher.Pages.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GamesLauncher.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auth">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Margin="10 0 10 0">Логин</Label>
            <TextBox x:Name="TBLogin" Width="200" Margin="10 0 10 10"/>
            <Label Margin="10 0 10 0">Пароль</Label>
            <PasswordBox x:Name="PBPassword" Margin="10 0 10 10"/>
            <Button x:Name="BTNLogIn" Content="Войти" Margin="10 10 10 10"/>
        </StackPanel>
    </Grid>
</Page>
